            right_action_items: [['close', lambda x: app.fechar()]]
            md_bg_color: app.theme_cls.primary_dark

        FileChooserListView:
			id: filechooser
			on_selection: root.file_fire_select(*args)

        MDLabel:
            id: path
            text: ""
            halign: "center"
            font_size: 12
            size_hint_y: None
